<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/statusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Activation: NOT ACTIVATED"
                android:textStyle="bold" />

            <!-- Environment -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Environment"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputBaseUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Base URL (https://api.verifyid.io)"
                android:inputType="textUri" />

            <EditText
                android:id="@+id/inputApiKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="API Key"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Product (SADL-PRO)" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <EditText
                    android:id="@+id/inputYears"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Years (1)"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnInit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Init SDK" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnCheckStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check Status" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Device Fingerprint:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fingerprintValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true" />

            <!-- Activation -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activation"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnActivate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activate Online" />

            <EditText
                android:id="@+id/inputOfflineToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Offline Token"
                android:inputType="textMultiLine"
                android:minLines="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnImportToken"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Import Token" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnClearToken"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear Token" />
            </LinearLayout>

            <!-- Decode -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decode / Payload"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputPdf417"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Paste PDF417 base64 here"
                android:inputType="textMultiLine"
                android:minLines="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDecode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Decode Licence" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btnPayload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Get Payload" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/resultRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:paddingTop="8dp"
                android:visibility="gone">

                <!-- Text column -->
                <TextView
                    android:id="@+id/outputFields"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textIsSelectable="true"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:paddingEnd="12dp" />

                <!-- Photo column (fixed width), sits on the right -->
                <ImageView
                    android:id="@+id/photoPreview"
                    android:layout_width="140dp"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#22000000"
                    android:contentDescription="Driver portrait"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Log (separate from resultRow so it stays visible) -->
            <TextView
                android:id="@+id/logView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#111111"
                android:overScrollMode="always"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textColor="#EEEEEE"
                android:textIsSelectable="true"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
